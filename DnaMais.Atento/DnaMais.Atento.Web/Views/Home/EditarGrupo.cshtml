@model DnaMais.Atento.Web.Models.GrupoUsuarioModel
@{
    ViewBag.Title = "DNA+ | Atento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />

@Html.ActionLink("Voltar para Lista de Grupos", "ListarGrupoUsuario", "Home", null, new { @class = "btn btn-primary" })

<hr />

@{Html.BeginForm("EditarGrupo", "Home");
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading"><h2>Editar Grupo</h2></div>
                <div class="container">
                    <div class="panel-body">
                        <div class="col-md-12">
                            @Html.HiddenFor(model => model.Codigo)
                        </div>

                        <div class="col-md-5">
                            <label>Nome Atual:&emsp;</label>@Html.DisplayFor(model => model.Nome)
                            @Html.TextBox("txtGrupo", null, new { @class = "form-control", @placeholder = "Digite um novo nome para o grupo" })
                            <div id="msgGrupo" class="hidden" style="color:red">Campo nome obrigatório</div>
                        </div>

                        <div class="col-md-5">
                            <label>Descrição Atual:&emsp;</label>@Html.DisplayFor(model => model.Descricao)
                            @Html.TextBox("txtDescricao", null, new { @class = "form-control", @placeholder = "Digite uma nova descrição para o grupo" })
                            <div id="msgDescricao" class="hidden" style="color:red">Campo descrição obrigatório</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <input type="submit" value="Salvar Alterações" class="btn btn-primary" id="btnSalvar" />
    </div>
}

<script>

    $(document).ready(function () {

        $('#txtGrupo').focus();

        $('#btnSalvar').click(function () {

            if ($('#txtGrupo').val() == "") {
                $('#msgGrupo').removeClass('hidden');
                $('#txtGrupo').focus();
                return false;
            }
            else {
                $('#msgGrupo').addClass('hidden');
            }

            if ($('#txtDescricao').val() == "") {
                $('#msgDescricao').removeClass('hidden');
                $('#txtDescricao').focus();
                return false;
            }
            else {
                $('#msgDescricao').addClass('hidden');
            }


        });

        $('#txtGrupo').on('blur', function () {

            if ($('#txtGrupo').val() == "")
            {
                $('#msgGrupo').removeClass('hidden');
                $('#txtGrupo').focus();
                return false;
            }
            else
            {
                $('#msgGrupo').addClass('hidden');
            }

        });

        $('#txtDescricao').on('blur', function () {

            if ($('#txtDescricao').val() == "")
            {
                $('#msgDescricao').removeClass('hidden');
                $('#txtDescricao').focus();
                return false;
            }
            else {
                $('#msgDescricao').addClass('hidden');
            }

        });
    });

</script>