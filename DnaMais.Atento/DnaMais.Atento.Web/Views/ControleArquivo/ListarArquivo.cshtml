@model IEnumerable<DnaMais.Atento.Web.Models.ControleArquivoModel>

@{
    ViewBag.Title = "DNA+ | Atento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />

@if (TempData["notice"] != null)
{
    <p style="color:#22862c">@TempData["notice"]</p>
}

@if (TempData["newUser"] != null)
{
    <p style="color:#22862c">@TempData["newUser"]</p>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                @Html.ActionLink("Novo Processamento", "Create", null, new { @class = "btn btn-primary" })
            </div>

            <div class="panel-heading"><h2>Listagem de Arquivos</h2></div>

            <div class="panel-body">

                <div id="ajaxLoader" hidden="hidden">

                    <label>Recarregando Dados... <br /><img src="/img/ajax-loader.gif" /></label>

                </div>

                <div id="conteudoTabela">

                    @Html.Partial("_GridArquivos", Model)

                </div>

            </div>
        </div>
    </div>
</div>

<script>

    $(document).ready(function () {

        //$('#btnFiltros').click(function () {

        //    if ($('#filtros').is(':hidden')) {

        //        $('#filtros').fadeIn(500);


        //    }
        //    else {

        //        $('#filtros').fadeOut(500);


        //    }
        //});

        setInterval(function () {

            $.ajax({

                url: '@Url.Action("RecarregarGrid","ControleArquivo")',
                context: $('#conteudoTabela'),
                type: "POST",

                beforeSend: function () {

                    $(this).fadeOut(800);
                    $('#ajaxLoader').delay(810).fadeIn(1000);

                },

                success: function (data) {

                    $(this).html(data);

                },

                complete: function () {

                    $('#ajaxLoader').delay(100).fadeOut(1000);

                    $(this).delay(2000).fadeIn(800);
                }

            });

        },300000);

    });

</script>